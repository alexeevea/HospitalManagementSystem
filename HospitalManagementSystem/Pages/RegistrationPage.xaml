<Page x:Class="HospitalManagementSystem.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegistrationPage">
    <Grid Background="#F0F0F0">
        <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Name="UsernameTextBox" Width="250" Height="30" Padding="5" FontSize="14"/>
                <TextBlock Text="Пароль" FontSize="14" Margin="0,15,0,5"/>
                <PasswordBox Name="PasswordBox" Width="250" Height="30" Padding="5" FontSize="14"/>
                <TextBlock Text="Роль" FontSize="14" Margin="0,15,0,5"/>
                <ComboBox Name="RoleComboBox" Width="250" Height="30" FontSize="14">
                    <ComboBoxItem Content="Registrar"/>
                    <ComboBoxItem Content="Doctor"/>
                    <ComboBoxItem Content="Nurse"/>
                </ComboBox>
                <Button Content="Зарегистрироваться" Width="150" Height="35" Margin="0,20,0,0" Click="RegisterButton_Click" Background="#4CAF50" Foreground="White" FontSize="14" Cursor="Hand"/>
                <Button Content="Назад к входу" Width="150" Height="35" Margin="0,10,0,0" Click="BackToLoginButton_Click" Background="#2196F3" Foreground="White" FontSize="14" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>