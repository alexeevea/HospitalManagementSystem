<Page x:Class="HospitalManagementSystem.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
    <Grid Background="#F0F0F0">
        <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Name="UsernameTextBox" Width="250" Height="30" Padding="5" FontSize="14"/>
                <TextBlock Text="Пароль" FontSize="14" Margin="0,15,0,5"/>
                <PasswordBox Name="PasswordBox" Width="250" Height="30" Padding="5" FontSize="14"/>
                <Button Content="Войти" Width="100" Height="35" Margin="0,20,0,0" Click="LoginButton_Click" Background="#4CAF50" Foreground="White" FontSize="14" Cursor="Hand"/>
                <Button Content="Регистрация" Width="100" Height="35" Margin="0,10,0,0" Click="RegisterButton_Click" Background="#2196F3" Foreground="White" FontSize="14" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>